<%= bootstrap_form_for @video, html: { multipart: true } do |f| %>
    <%= f.text_field :title %>
  <br>
    <%= f.text_field :user %>
  <br>
    <%= f.text_field :embed_url %>
  <br>
    <%= f.text_field :thumbnail_url %>
  <br>
    <%= f.text_field :dncrew %>
  <br>
    <%= f.text_field  :series %>
  <br>
    <%= f.text_field :description %>
  <br>


  <%= f.submit "Submit Changes" %>


<% end %>

<%= link_to "Delete Video!", video_path, method: :delete, data: { confirm: "Are you sure you want to delete this Video?"} %>

<ul>

<% @video.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>
