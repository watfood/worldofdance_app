<main>
<% @videos.each do |video| %>

  <article>
   <!-- <button data-toggle="modal" data-target="#myModal">open</button> -->
   <button onclick="openVideoModal('<%=video.title%>', '<%=video.embed_url%>')">PLAY</button>
   <% if is_admin %>
    <p>I'm an admin bitch!</p>
   <% end %>
   <h4>
    <% if current_user %>
      <%= link_to video.title, video_path(video) %>
    <% else %>
      <p><%= video.title %></p>
    <% end %>

   </h4>

   <%=  image_tag ("http://img.youtube.com/vi/#{video.thumbnail_url}/maxresdefault.jpg"), {height: 180, width: 320}  %>

  </article>
<% end %>
</main>
