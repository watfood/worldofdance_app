<!DOCTYPE html>
<html>
<head>
  <title>WorldofdanceApp</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  <h1><%= link_to "World of Dance", videos_path %></h1>
  <h3>Move the Crowd!</h3>

  <nav>

   <% if current_user %>
    Welcome, <%= current_user.dncr %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Logout', session_path('dummy'), method: :delete %>
  <% else %>
    <%= link_to 'Login', login_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Sign Up', new_user_path %>
  <% end %>

  </nav>
  </header>


<%= yield %>
<!-- Video / Generic Modal -->



</body>
</html>
